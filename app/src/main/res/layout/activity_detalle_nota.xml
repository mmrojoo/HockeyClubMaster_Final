                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/worksans"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!--DATO-->
            <TextView
                android:id="@+id/Fecha_Nota_Detalle"
                android:text="@string/Fecha_Nota_Detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
            <!--ICONO CON IMAGEN-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--ICONO-->
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/estado_detalle"/>

                <!--TEXTO-->
                <TextView
                    android:text="@string/Estado_Detalle_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/worksans"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!--DATO-->
            <TextView
                android:id="@+id/Estado_Detalle"
                android:text="@string/Estado_Detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--BOTON IMPORTANTE-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        </androidx.appcompat.widget.LinearLayoutCompat>

            <Button
                android:id="@+id/Boton_Importante"
                android:text="@string/Boton_Importante"
                android:background="@android:color/transparent"
                android:fontFamily="@font/worksans"
                android:layout_width="match_parent"
                android:drawableTop="@drawable/icono_nota_no_importante"
                android:textColor="#fff"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>





</ScrollView>